@using Skclusive.Mobx.Component

@inherits PureComponentBase

<Highlighter>
    <h1>Pure Counter</h1>
    <p>Current count: @currentCount</p>
    <button class="btn btn-primary" @onclick="IncrementCount">
        Click me
    </button>
</Highlighter>

@code {

    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;

        StateHasChanged();
    }
}
